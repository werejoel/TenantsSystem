<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pay with Mobile Money</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: #f8fafc;
            color: #1e293b;
            line-height: 1.6;
            padding: 1.5rem 1rem;
            min-height: 100vh;
        }
        .container {
            max-width: 480px;
            margin: 0 auto;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            overflow: hidden;
        }
        .header {
            background: linear-gradient(135deg, #002244, #002244);
            color: white;
            text-align: center;
            padding: 2rem 1.5rem;
        }
        .header h1 {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }
        .header p {
            opacity: 0.9;
            font-size: 1rem;
        }
        .content {
            padding: 1.75rem;
        }
        .section {
            margin-bottom: 1.75rem;
        }
        .section-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .provider-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }
        .provider-card {
            border: 2.5px solid #e2e8f0;
            border-radius: 16px;
            padding: 1.5rem 1rem;
            text-align: center;
            cursor: pointer;
            transition: all 0.2s ease;
            background: #fff;
        }
        .provider-card:hover {
            border-color: #94a3b8;
        }
        .provider-card.selected {
            border-color: #7c3aed;
            background: #f8f5ff;
            box-shadow: 0 0 0 4px rgba(124, 58, 237, 0.15);
        }
        .provider-logo {
            width: 60px;
            height: 60px;
            margin: 0 auto 0.75rem;
        }
        .provider-name {
            font-weight: 700;
            font-size: 1.1rem;
        }
        .provider-subtitle {
            font-size: 0.8rem;
            color: #64748b;
        }
        .checkmark {
            position: absolute;
            top: 10px;
            right: 10px;
            width: 28px;
            height: 28px;
            background: #7c3aed;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
            font-weight: bold;
        }
        .provider-wrapper {
            position: relative;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }
        label {
            display: block;
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }
        input, select {
            width: 100%;
            padding: 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 1.1rem;
            transition: border 0.2s;
        }
        input:focus, select:focus {
            outline: none;
            border-color: #7c3aed;
            box-shadow: 0 0 0 4px rgba(124, 58, 237, 0.1);
        }
        .input-prefix {
            position: relative;
        }
        .currency {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #64748b;
            font-weight: 600;
            pointer-events: none;
        }
        .input-prefix input {
            padding-left: 4.5rem;
        }

        /* Charges */
        .charge-item {
            display: flex;
            align-items: center;
            padding: 1rem;
            border: 2px solid #f1f5f9;
            border-radius: 12px;
            margin-bottom: 0.75rem;
            background: #fafbff;
            cursor: pointer;
        }
        .charge-item:hover {
            border-color: #e0e7ff;
        }
        .charge-item.selected {
            border-color: #7c3aed;
            background: #f8f5ff;
        }
        .charge-item input[type="checkbox"] {
            width: 22px;
            height: 22px;
            margin-right: 1rem;
            accent-color: #7c3aed;
            cursor: pointer;
        }
        .charge-details {
            flex: 1;
        }
        .charge-type {
            font-weight: 600;
            color: #1e293b;
        }
        .charge-due {
            font-size: 0.85rem;
            color: #64748b;
        }
        .charge-amount {
            font-weight: 700;
            color: #7c3aed;
            font-size: 1.2rem;
        }

        /* Total Summary */
        .total-summary {
            background: #f8fafc;
            border: 2px solid #e2e8f0;
            border-radius: 16px;
            padding: 1.25rem;
            margin: 1.5rem 0;
            text-align: center;
            font-size: 1.25rem;
        }
        .total-label {
            color: #64748b;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }
        .total-amount {
            font-weight: 800;
            color: #1e293b;
            font-size: 1.8rem;
        }

        /* Buttons */
        .btn-group {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }
        .btn {
            flex: 1;
            padding: 1.1rem;
            border: none;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
        }
        .btn-secondary {
            background: #f1f5f9;
            color: #475569;
        }
        .btn-primary {
            background: linear-gradient(135deg, #7c3aed, #3b82f6);
            color: white;
            box-shadow: 0 8px 20px rgba(124, 58, 237, 0.3);
        }
        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        .spinner {
            display: inline-block;
            width: 18px;
            height: 18px;
            border: 2px solid #ffffff50;
            border-top-color: white;
            border-radius: 50%;
            margin-right: 8px;
            vertical-align: middle;
        }

        /* Security Badge */
        .security-badge {
            background: #ecfdf5;
            color: #065f46;
            padding: 1rem;
            border-radius: 12px;
            font-size: 0.9rem;
            text-align: center;
            margin-top: 1.5rem;
            border: 1px solid #a7f3d0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Pay with Mobile Money</h1>
            <p>Fast, secure, and convenient</p>
        </div>

        <div class="content">
            <!-- Provider Selection -->
            <div class="section">
                <div class="section-title">Choose Provider</div>
                <div class="provider-grid">
                    <label class="provider-wrapper">
                        <input type="radio" name="provider" value="mtn" checked hidden>
                        <div class="provider-card selected">
                            <svg class="provider-logo" viewBox="0 0 100 100"><rect width="100" height="100" rx="20" fill="#FFCC00"/><path d="M30 35 L35 65 L40 35 L50 65 L60 35 L65 65 L70 35" stroke="#000" stroke-width="4" stroke-linecap="round"/><circle cx="50" cy="50" r="35" stroke="#000" stroke-width="3" fill="none"/></svg>
                            <div class="provider-name">MTN MoMo</div>
                            <div class="provider-subtitle">Mobile Money</div>
                            <div class="checkmark">✓</div>
                        </div>
                    </label>

                    <label class="provider-wrapper">
                        <input type="radio" name="provider" value="airtel" hidden>
                        <div class="provider-card">
                            <svg class="provider-logo" viewBox="0 0 100 100"><rect width="100" height="100" rx="20" fill="#ED1C24"/><path d="M35 65 Q35 35 50 35 Q65 35 65 65" stroke="#FFF" stroke-width="6" fill="none"/><circle cx="50" cy="28" r="4" fill="#FFF"/><path d="M30 70 L70 70" stroke="#FFF" stroke-width="3"/></svg>
                            <div class="provider-name">Airtel Money</div>
                            <div class="provider-subtitle">Instant Payments</div>
                            <div class="checkmark">✓</div>
                        </div>
                    </label>
                </div>
            </div>

            <!-- Payment Details -->
            <div class="section">
                <div class="section-title">Payment Details</div>

                <div class="form-group">
                    <label>Phone Number</label>
                    <input type="tel" id="phoneNumber" placeholder="e.g. 256771234567" required>
                </div>

                <div class="form-group">
                    <label>Amount (UGX)</label>
                    <div class="input-prefix">
                        <span class="currency">UGX</span>
                        <input type="number" id="amount" placeholder="50,000" min="100">
                    </div>
                </div>

                <div class="form-group">
                    <label>Purpose</label>
                    <select id="purpose">
                        <option>Rent Payment</option>
                        <option>Utilities (Water/Electricity)</option>
                        <option>Security Deposit</option>
                        <option>Other</option>
                    </select>
                </div>
            </div>

            <!-- Outstanding Charges -->
            <div class="section">
                <div class="section-title">Pay Outstanding Charges (Optional)</div>
                <div id="charges-container">
                    <!-- Charges loaded by JS -->
                </div>
            </div>

            <!-- Total Amount -->
            <div class="total-summary">
                <div class="total-label">Total Amount to Pay</div>
                <div class="total-amount" id="totalAmount">UGX 0</div>
            </div>

            <!-- Action Buttons -->
            <div class="btn-group">
                <button type="button" class="btn btn-secondary" onclick="history.back()">Cancel</button>
                <button type="button" id="btnPay" class="btn btn-primary">Pay Now</button>
            </div>

            <div class="security-badge">
                Secured by Flutterwave • You'll receive a payment prompt on your phone
            </div>
        </div>
    </div>

    <script>
        // Format currency
        const formatter = new Intl.NumberFormat('en-UG', { style: 'currency', currency: 'UGX', minimumFractionDigits: 0 });

        // Update total
        function updateTotal() {
            let base = parseInt(document.getElementById('amount').value || 0);
            let charges = Array.from(document.querySelectorAll('.charge-checkbox:checked'))
                .reduce((sum, cb) => sum + parseInt(cb.dataset.amount), 0);
            let total = base + charges;
            document.getElementById('totalAmount').textContent = formatter.format(total) || 'UGX 0';
        }

        // Provider selection
        document.querySelectorAll('input[name="provider"]').forEach(radio => {
            radio.addEventListener('change', function() {
                document.querySelectorAll('.provider-card').forEach(card => {
                    card.classList.toggle('selected', card.parentElement.querySelector('input').checked);
                });
            });
        });

        // Fetch real charges from server
        let charges = [];

        async function createTestCharges() {
            try {
                console.log('Creating test charges...');
                const response = await fetch('/Payment/CreateTestCharge', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const data = await response.json();
                console.log('Test charges creation response:', data);
                
                if (response.ok && data.success) {
                    console.log('Test charges created successfully');
                    return true;
                }
                return false;
            } catch (error) {
                console.error('Error creating test charges:', error);
                return false;
            }
        }

        async function loadCharges() {
            try {
                console.log('Loading charges from /Payment/GetTenantCharges...');
                const response = await fetch('/Payment/GetTenantCharges', {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                console.log('Response status:', response.status);
                
                if (!response.ok) {
                    console.error('Failed to load charges, status:', response.status);
                    charges = [];
                } else {
                    charges = await response.json();
                    console.log('Loaded charges:', charges);
                }
                
                // If no charges loaded, try to create test charges
                if (!charges || charges.length === 0) {
                    console.log('No charges found, attempting to create test charges...');
                    const created = await createTestCharges();
                    if (created) {
                        // Reload charges after creation
                        const retryResponse = await fetch('/Payment/GetTenantCharges', {
                            method: 'GET',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        });
                        if (retryResponse.ok) {
                            charges = await retryResponse.json();
                            console.log('Reloaded charges after creation:', charges);
                        }
                    }
                }
                
                renderCharges();
            } catch (error) {
                console.error('Error loading charges:', error);
                charges = [];
                renderCharges();
            }
        }

        function renderCharges() {
            const container = document.getElementById('charges-container');
            console.log('Rendering charges, count:', charges ? charges.length : 0);
            
            if (!charges || !charges.length) {
                container.innerHTML = '<p style="text-align:center;color:#94a3b8;padding:2rem 0;">No outstanding charges</p>';
                return;
            }
            container.innerHTML = '';
            charges.forEach(c => {
                console.log('Rendering charge:', c);
                const div = document.createElement('label');
                div.className = 'charge-item';
                div.innerHTML = `
                    <input type="checkbox" class="charge-checkbox" value="${c.id}" data-amount="${c.amount}">
                    <div class="charge-details">
                        <div class="charge-type">${c.chargeType}</div>
                        <div class="charge-due">Due: ${new Date(c.dueDate).toLocaleDateString()}</div>
                    </div>
                    <div class="charge-amount">${formatter.format(c.amount)}</div>
                `;
                div.querySelector('input').addEventListener('change', e => {
                    div.classList.toggle('selected', e.target.checked);
                    updateTotal();
                });
                container.appendChild(div);
            });
        }

        // Input listeners
        document.getElementById('amount').addEventListener('input', updateTotal);
        
        // Load charges when page loads
        loadCharges();
        updateTotal();

        // Pay button
        document.getElementById('btnPay').addEventListener('click', async function() {
            const provider = document.querySelector('input[name="provider"]:checked')?.value;
            const phone = document.getElementById('phoneNumber').value.trim();
            const amount = parseInt(document.getElementById('amount').value || 0);
            
            if (!provider) return alert("Please select a provider (MTN or Airtel)");
            if (!phone || phone.length < 10) return alert("Please enter a valid phone number");
            if (amount < 100) return alert("Minimum amount is 100 UGX");

            // Get selected charges
            const selectedChargeIds = Array.from(document.querySelectorAll('.charge-checkbox:checked'))
                .map(c => parseInt(c.value));

            console.log('Selected charges:', selectedChargeIds);
            console.log('Total charges available:', charges.length);

            if (selectedChargeIds.length === 0) {
                return alert("Please select at least one charge to pay");
            }

            this.disabled = true;
            this.innerHTML = '<span class="spinner"></span> Processing...';

            try {
                const payload = {
                    provider,
                    phone,
                    amount,
                    purpose: "Payment for outstanding charges",
                    selectedChargeIds
                };

                console.log('Sending payment payload:', payload);

                const resp = await fetch('/Payment/InitiateMobilePayment', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(payload)
                });

                const data = await resp.json();
                console.log('Payment response:', data);
                
                if (resp.ok && data.success) {
                    alert('Payment initiated! Check your phone ' + phone + ' to approve the payment.\n\nTransaction: ' + (data.transactionReference || data.paymentId));
                } else {
                    alert('Error: ' + (data.message || 'Failed to initiate payment'));
                }
                
                this.innerHTML = 'Pay Now';
                this.disabled = false;
            } catch (error) {
                console.error('Payment error:', error);
                alert('An error occurred: ' + error.message);
                this.innerHTML = 'Pay Now';
                this.disabled = false;
            }
        });
    </script>
</body>
</html>