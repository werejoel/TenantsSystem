@using TenantsManagementApp.ViewModels.Roles
@model ManageUsersInRoleViewModel
@{
    ViewData["Title"] = $"Manage Users for Role: {Model.RoleName}";
}
<div class="container mt-4">
    <h2 class="mb-3">Manage Users for Role: <span class="text-primary">@Model.RoleName</span></h2>
    <form asp-action="ManageUsers" method="post">
        <input type="hidden" asp-for="RoleId" />
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Email</th>
                    <th>Assigned</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Users.Count; i++)
                {
                    <tr>
                        <td>@Model.Users[i].Email</td>
                        <td>
                            <input type="checkbox" asp-for="Users[@i].IsAssigned" />
                            <input type="hidden" asp-for="Users[@i].UserId" />
                            <input type="hidden" asp-for="Users[@i].Email" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-action="Details" asp-route-id="@Model.RoleId" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
